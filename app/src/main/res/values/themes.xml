<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hudlup" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Heading1">
        <item name="android:textColor">@color/Text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:autoSizeMinTextSize">22sp</item>
        <item name="android:autoSizeMaxTextSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="editText">
        <item name="android:textColor">@color/Btn_Text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:textColorHint">@color/EditText_Hint</item>
        <item name="android:padding">20dp</item>

    </style>
    <style name="infoText">
        <item name="android:textColor">@color/Info_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:textColorHint">@color/EditText_Hint</item>
        <item name="android:padding">20dp</item>

    </style>
    <style name="primaryBtn">
        <item name="android:textColor">@color/Btn_Text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_btn_primary</item>
    </style>
    <style name="secondaryBtn">
        <item name="android:textColor">@color/Btn_Text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_btn_secondary</item>
    </style>
</resources>